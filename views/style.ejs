<style>
	html,
	body {
		font-family: Arial, Helvetica, sans-serif;
		margin-bottom: 50px;
	}

  #left {
    padding: 20px;
    margin: 10px;
    background-color: #4fc1e9;
  }

  #right {
    padding: 20px;
    margin: 10px;
    background-color: #fc6e51;
  }

  #right-content {
    max-height: 110vh;
    margin-bottom: 60px;
    overflow-y: scroll;
    background-color: #6fdfee;
    position: static;
  }

  #left-content {
    max-height: 100vh;
    margin-bottom: 60px;
    overflow-y: scroll;
    background-color: #6fdfee;
    position: static;
  }

  #h1 {
    padding: 20px;
    text-align: center;
    font-size: 100px;
  }

  h2 {
    top: 0;
    z-index: 1020;
  }

  h5 {
    padding-top: 10px;
  }

  #tweet-area {
    width: 100%;
    font-family: Arial, Helvetica, sans-serif;
    font-size: 20px;
    line-height: 20px;
  }

  #remaining-chars {
    text-align: right;
    font-size: 12px;
  }

  #tweet-button {
    font-size: 15px;
    text-align: center;
    width: auto;
    margin-bottom: 10px;
    float: right;
  }

  #schedule-button {
    font-size: 15px;
    text-align: center;
    width: auto;
    margin-bottom: 10px;
    margin-right: 20px;
    float: right;
  }

  /* Bootstrap search bar */

  .main-search-input {
    background: #fff;
    padding: 0 120px 0 0;
    border-radius: 1px;
    box-shadow: 0px 0px 0px 6px rgba(255, 255, 255, 0.3);
  }

  .fl-wrap {
    float: left;
    width: 100%;
    position: relative;
  }

  .main-search-input-item input {
    float: left;
    border: none;
    width: 100%;
    height: 50px;
    padding-left: 20px;
  }

  .main-search-button {
    background: #4db7fe;
    position: -webkit-sticky;
  }

  .main-search-button {
    position: absolute;
    right: 0px;
    height: 50px;
    width: 120px;
    color: #fff;
    top: 0;
    border: none;
    border-top-right-radius: 0px;
    border-bottom-right-radius: 0px;
    cursor: pointer;
  }

  .main-search-input-wrap {
    max-width: 500px;
    margin: 20px 20px 100px 20px;
  }

  @media only screen and (max-width: 768px) {
    .main-search-input-item input {
      border-radius: 6px !important;
      background: #fff;
    }
  }

  /* end of Bootstrap search bar */

  /* Boostrap search button */

  .button {
    display: inline-block;
    background: #4285f4;
    color: #fff;
    text-transform: uppercase;
    padding: 5px 20px;
    border-radius: 5px;
    cursor: pointer;
  }

  .shortcut-buttons-flatpickr-buttons {
    justify-content: center;
    width: 100%;
  }

  /* end of Bootstrap search button */


  #book-api {
    width: 1000px;
    margin: auto;
    padding: 0px 100px;
  }

  #book-genre {
    font-size: medium;
    font-weight: bold;
  }

  #book-api-table {
    cursor: pointer;
  }

  .links-to-books {
    cursor: pointer;
  }

  .delete-button {
    color: red;
    font-size: 12px;
  }

  .retweet-count {
    margin-right: 20px;
  }

  .fa-heart,
  .fa-retweet {
    margin: 3px;
  }

  #notification-bar {
    font-size: 15px;
    text-align: left;
    font-family: Arial, Helvetica, sans-serif;
  }

  /* Preview image div */
  #color-picker {
    padding: 20px;
    margin-left: 100px;
  }

  #background-colorpicker, 
  #text-colorpicker {
    cursor: pointer;
  }

  #preview-image-div {
    padding: 10px;
    margin-right: 200px;
  }

  /* end of preview image div */

  /* Loading status */
  #loading-status {
    display: none;
    color: deepskyblue;
  }

  #loading-text {
    margin-left: 40px;
    font-weight: 500;
  }

  #jumping-dots span {
    position: relative;
    bottom: 0px;
    animation: jump 2s infinite;
  }
  #jumping-dots #dot-1{
    animation-delay: 200ms;
  }
  #jumping-dots #dot-2{
    animation-delay: 400ms;
  }
  #jumping-dots #dot-3{
    animation-delay: 600ms;
  }

  @keyframes jump {
    0%   {bottom: 0px;}
    20%  {bottom: 5px;}
    40%  {bottom: 0px;}
  }
  /* end of loading status */
</style>
